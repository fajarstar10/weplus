<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin"
    android:layout_marginTop="@dimen/margin"
    android:layout_marginRight="@dimen/margin"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin">

    <ImageView
        android:id="@+id/adapterbengkelrekanan_icon"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_car"
        android:layout_marginLeft="@dimen/margin"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/adapterbengkelrekanan_title"
        android:layout_toRightOf="@+id/adapterbengkelrekanan_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autocilin Garage"
        android:textSize="@dimen/font_medium"
        android:textColor="@color/grey_medium"
        android:layout_marginLeft="@dimen/margin_m"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/adapterbengkelrekanan_address"
        android:layout_toRightOf="@id/adapterbengkelrekanan_icon"
        android:layout_below="@id/adapterbengkelrekanan_title"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_13"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:text="Jl Kopo Cirangrang No 433 Kel. Margasuka Kec. babakan Ciparaya bandung"
        android:textStyle="normal"
        android:textColor="@color/grey_medium"
        android:textSize="@dimen/font_normal"/>

    <TextView
        android:id="@+id/adapterbengkelrekanan_telp"
        android:layout_toRightOf="@+id/adapterbengkelrekanan_icon"
        android:layout_below="@id/adapterbengkelrekanan_address"
        android:layout_marginTop="@dimen/margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_phone_24px"
        android:text=": 08121234567"
        android:textSize="@dimen/font_normal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_m"
        android:textColor="@color/grey_medium"
        android:drawablePadding="@dimen/margin_small"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/adapterbengkelrekanan_btn_call"
        android:layout_below="@+id/adapterbengkelrekanan_address"
        android:layout_toRightOf="@+id/adapterbengkelrekanan_telp"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/hubungi"
        android:textColor="@color/white"
        android:textSize="@dimen/font_normal"
        android:textStyle="bold"
        android:background="@drawable/border_red"
        android:textAllCaps="false"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
