<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".agen.dashboard.DashboardAgentActivity">
    <include
        android:id="@+id/layoutHeader"
        layout="@layout/view_back" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutHeader">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp">

            <ImageView
                android:id="@+id/imgAgenAvatar"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/margin_16"
                app:srcCompat="@drawable/ic_baseline_person_24px" />
            <TextView
                android:id="@+id/tvAgenName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgAgenAvatar"
                android:text="Devid Brown"
                android:textColor="#777"
                android:textSize="17sp"
                android:fontFamily="@font/ubuntu_b"/>
            <TextView
                android:id="@+id/tvAgenSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAgenName"
                android:text="Saldo : Rp 1.000.000"
                android:textColor="#777"
                android:fontFamily="@font/ubuntu_m"
                android:textSize="14sp"
                android:layout_toEndOf="@id/imgAgenAvatar"/>

            <LinearLayout
                android:id="@+id/agenBadgeWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAgenSaldo"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/imgAgenAvatar"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_medal" />

                <TextView
                    android:id="@+id/tvAgenBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#a7a7a7"
                    android:fontFamily="@font/ubuntu_m"
                    android:text="Partner Baru" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey_bg_border"/>
        <RelativeLayout
            android:id="@+id/achievementWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="16dp">
            <TextView
                android:id="@+id/achievementLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pencapaian Bulan Ini"
                android:fontFamily="@font/ubuntu_b"
                android:textSize="12sp"
                android:textColor="#777"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tvAchievementPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/achievementLabel"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/ubuntu_m"
                android:textColor="#777"
                android:textSize="12sp"
                android:text="Hingga 10-10-2020"/>
            <ProgressBar
                android:id="@+id/achievementProgress"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:scaleY="2"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="1000000"
                android:progress="50"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tvAchievementPeriod"
                android:layout_centerHorizontal="true"/>
            <com.xw.repo.BubbleSeekBar
                android:id="@+id/achievementSeekbar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:layout_below="@id/tvAchievementPeriod"
                android:layout_centerHorizontal="true"
                android:enabled="false"
                app:bsb_bubble_color="@color/grey_bg_border"
                app:bsb_bubble_text_color="@color/colorPrimaryDark"
                app:bsb_max="1000000.0"
                app:bsb_min="0"
                app:bsb_progress="60"
                app:bsb_show_thumb_text="false"
                app:bsb_thumb_radius="1dp"
                app:bsb_second_track_color="@color/red_burem"
                app:bsb_section_count="5"
                app:bsb_show_progress_in_float="true"
                app:bsb_track_size="8dp"
                app:bsb_track_color="@color/grey_bg_border"/>
            <TextView
                android:id="@+id/tvAgenTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:layout_below="@id/achievementProgress"
                android:text="Rp 500.00/Rp 1.000.000"
                android:fontFamily="@font/ubuntu_r"/>
            <TextView
                android:id="@+id/tvAgenTargetPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:textSize="14sp"
                android:textColor="#777"
                android:layout_toEndOf="@id/tvAgenTarget"
                android:layout_below="@id/achievementProgress"
                android:text="(50%)"
                android:fontFamily="@font/ubuntu_m"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey_bg_border"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/grey_bg_border"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/grey_bg_border"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.35" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/tvTotalKomisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 1Juta"
                    android:textSize="14sp"
                    android:textColor="@color/red_burem"
                    android:fontFamily="@font/ubuntu_b"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total\nKomisi"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/ubuntu_m"
                    android:textColor="#777"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="@id/guideline1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/tvJumlahTransaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85"
                    android:textSize="15sp"
                    android:textColor="@color/red_burem"
                    android:fontFamily="@font/ubuntu_b"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah\nTransaksi"
                    android:fontFamily="@font/ubuntu_m"
                    android:textColor="#777"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/tvPolisAktif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="82"
                    android:textSize="15sp"
                    android:textColor="@color/red_burem"
                    android:fontFamily="@font/ubuntu_b"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Polis\nAktif"
                    android:gravity="center"
                    android:fontFamily="@font/ubuntu_m"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="#777"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_bg_border"/>
        <RelativeLayout
            android:id="@+id/buttonBuyProtection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp">
            <ImageView
                android:id="@+id/tvButtonLabel"
                android:src="@drawable/btn_beli_proteksi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_bg_border"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAgen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/loadingProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutHeader"
        android:visibility="gone"
        android:background="#80d5d5d5">
        <com.agrawalsuneet.dotsloader.loaders.AllianceLoader
            android:id="@+id/loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:alliance_animDuration="500"
            app:alliance_distanceMultiplier="5"
            app:alliance_dotsRadius="4dp"
            app:alliance_drawOnlyStroke="true"
            app:alliance_firstDotsColor="@color/colorPrimary"
            app:alliance_secondDotsColor="@color/colorPrimary"
            app:alliance_strokeWidth="8dp"
            app:alliance_thirdDotsColor="@color/colorPrimary" />
    </RelativeLayout>
</RelativeLayout>