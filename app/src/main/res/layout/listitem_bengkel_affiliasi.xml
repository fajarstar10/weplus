<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bengkelWrapper"
    android:padding="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_rounded_grey_medium">
    <ImageView
        android:id="@+id/bengkelIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_bengkel"/>
    <TextView
        android:id="@+id/tvBengkelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/bengkelIcon"
        android:layout_toStartOf="@id/tvJamBuka"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/ubuntu_b"
        android:textSize="16sp"
        tools:text="Auto 2000 - Way Halim"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/tvBengkelArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/bengkelIcon"
        android:layout_below="@id/tvBengkelName"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ubuntu_m"
        android:textSize="14sp"
        tools:text="Jakarta Barat"/>
    <TextView
        android:id="@+id/tvJamBuka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_border_red_light"
        android:textColor="@color/white"
        android:padding="4dp"
        android:text="09.00 - 15.00"/>
</RelativeLayout>