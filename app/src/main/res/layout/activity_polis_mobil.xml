<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/view_back"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/asurasiygdiajukan"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal"
        android:layout_margin="@dimen/margin_m"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_white"
        android:padding="@dimen/margin"
        android:layout_marginRight="@dimen/margin_m"
        android:layout_marginLeft="@dimen/margin_m">

        <ImageView
            android:id="@+id/mobil_icon_asuransi"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/aca_insurance"
            android:layout_centerVertical="true"
            android:layout_alignTop="@id/mobil_title_asuransi"
            android:layout_alignBottom="@id/mobil_price_asuransi"/>
        <TextView
            android:id="@+id/mobil_title_asuransi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asuransi mobil Adira"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/font_normal"
            android:layout_toRightOf="@id/mobil_icon_asuransi"
            android:layout_marginLeft="@dimen/margin_m"/>

        <TextView
            android:id="@+id/mobil_price_asuransi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 175.000"
            android:maxLines="1"
            android:textColor="@color/green"
            android:textSize="@dimen/font_normal"
            android:layout_toRightOf="@id/mobil_icon_asuransi"
            android:layout_marginLeft="@dimen/margin_m"
            android:layout_below="@id/mobil_title_asuransi"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/datapemesan"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"
        android:layout_marginTop="@dimen/margin_small"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/semuadetailtransaksiakan"
        android:textColor="@color/green"
        android:textSize="@dimen/font_small"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_grey"
        android:padding="@dimen/margin"
        android:layout_margin="@dimen/margin_m">

        <TextView
            android:id="@+id/mobil_nama_pemesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Henry Chrystianto"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="@dimen/font_normal" />
        <TextView
            android:id="@+id/mobil_email_pemesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="henry@gmail.com"
            android:textColor="@color/grey_medium"
            android:textStyle="bold"
            android:textSize="@dimen/font_small"/>
        <TextView
            android:id="@+id/mobil_telp_pemesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="08123456789"
            android:textColor="@color/grey_medium"
            android:textStyle="bold"
            android:textSize="@dimen/font_small"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/datapemegangpolis"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"/>

   <Switch
       android:id="@+id/mobil_switch"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/samadgndatapemesan"
       android:layout_marginRight="@dimen/margin_m"
       android:layout_marginLeft="@dimen/margin_m"
       android:textColor="@color/grey_medium"
       android:textStyle="bold"
       android:checked="false"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="@dimen/margin_m"
        android:background="@drawable/border_grey">

        <TextView
            android:id="@+id/mobil_data_pemegang_polis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/masukkandatapemegangpolis"
            android:background="@null"
            android:paddingLeft="@dimen/margin"
            android:paddingTop="@dimen/margin_small"
            android:gravity="top"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/mobil_edit_data_pemegang_polis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/datamobil"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="@dimen/margin_m"
        android:background="@drawable/border_grey">

        <TextView
            android:id="@+id/mobil_data_mobil_polis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/lengkapidatamobil"
            android:background="@null"
            android:paddingLeft="@dimen/margin"
            android:paddingTop="@dimen/margin_small"
            android:gravity="top"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/mobil_edit_data_mobil_polis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"/>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mobil_btn_lakukan_pembayaran"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_above="@id/atau"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginTop="@dimen/margin_big_m"
        android:layout_marginRight="@dimen/margin_m"
        android:layout_marginBottom="@dimen/margin"
        android:background="@drawable/border_red"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/lakukanpembayaran"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/font_medium"
        android:textStyle="bold"
        app:cornerRadius="1mm" />

</LinearLayout>