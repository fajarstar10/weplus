                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_potongan_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_biaya_admin"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/ubuntu_b"
                    android:text="@string/potonganharga"
                    android:textColor="@color/grey_medium"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_total_pembelian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_potongan_harga"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/ubuntu_b"
                    android:text="@string/totalpembelian"
                    android:textColor="@color/grey_medium"
                    android:textSize="14sp" />

                <TextView
