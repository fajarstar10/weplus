                android:textColor="@color/black_7070"
                android:textSize="14sp"
                android:fontFamily="@font/ubuntu_b" />

            <RelativeLayout
                android:id="@+id/transaksi_item_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
