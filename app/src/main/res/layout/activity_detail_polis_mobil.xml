<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <include
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        layout="@layout/view_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_m"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/text_id_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/idtransaksi"
                    android:textColor="@color/grey_medium"
                    android:textSize="16sp"
                    android:fontFamily="@font/ubuntu_m"/>

                <TextView
                    android:id="@+id/text_nomor_polis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_id_transaksi"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="4dp"
                    android:text="@string/nomorpolis"
                    android:textColor="@color/grey_medium"
                    android:textSize="16sp"
                    android:fontFamily="@font/ubuntu_m"/>

                <TextView
                    android:id="@+id/id_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="WE0123456"
                    android:textColor="@color/blue_1"
                    android:textSize="@dimen/font_normal"
                    android:fontFamily="@font/ubuntu_b"/>

                <TextView
                    android:id="@+id/nomor_polis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_transaksi"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="Z1 PAC 20192307"
                    android:textColor="@color/grey_medium"
                    android:textSize="@dimen/font_normal"
                    android:fontFamily="@font/ubuntu_b"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:text="@string/detailpembelian"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/nomor_polis"
                    android:textColor="@color/black_7f7f7f"
                    android:textSize="16sp"
                    android:fontFamily="@font/ubuntu_b" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/text_tgl_pembelian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/tglpembelian"
                    android:textColor="@color/grey_medium"
                    android:textSize="14sp"
                    android:fontFamily="@font/ubuntu_r"/>

                <TextView
                    android:id="@+id/text_metode_pembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_tgl_pembelian"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="4dp"
                    android:text="@string/metodepembayaran"
                    android:textColor="@color/grey_medium"
                    android:textSize="14sp"
                    android:fontFamily="@font/ubuntu_r"/>

                <TextView
                    android:id="@+id/text_masa_aktif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_metode_pembayaran"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="4dp"
                    android:text="@string/masaakitipolis"
                    android:textColor="@color/grey_medium"
                    android:textSize="14sp"
                    android:fontFamily="@font/ubuntu_r"/>

                <TextView
