                    android:layout_marginStart="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/item_detail_img"
                    android:fontFamily="@font/ubuntu_b"
                    android:text="@string/axacareprotection"
                    android:textColor="@color/grey_medium"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/itemDetailSeries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/itemDetailsBrand"
                    android:layout_marginStart="24dp"
                    android:layout_toEndOf="@id/item_detail_img"
                    android:fontFamily="@font/ubuntu_r"
                    android:text="24-03-2020 11:59"
                    android:textColor="@color/grey_medium"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/itemDetailsYear"
                    android:layout_width="wrap_content"
