<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_m"
        android:textSize="16sp"
        android:text="Jumlah Anggota Keluarga"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_medium"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textTitle"/>
    <RelativeLayout
        android:id="@+id/adultWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/textAdult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_m"
            android:textSize="16sp"
            android:text="Dewasa"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/textAdultInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_r"
            android:textSize="11sp"
            android:text="Diatas 18 tahun"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/adult_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:backGroundColor="@color/colorPrimary"
            app:textSize="6sp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentEnd="true"
            tools:ignore="SmallSp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/childWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/adultWrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonSelect">
        <TextView
            android:id="@+id/textChildInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_r"
            android:textSize="11sp"
            android:text="Dibawah 18 tahun"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/textChild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_m"
            android:textSize="16sp"
            android:text="Anak-anak"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/child_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:backGroundColor="@color/colorPrimary"
            app:textSize="6sp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentEnd="true"
            tools:ignore="SmallSp" />
    </RelativeLayout>
    <Button
        android:id="@+id/buttonSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="Simpan"
        android:background="@drawable/border_fill_red"
        android:textColor="@color/white"
        android:fontFamily="@font/ubuntu_m"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>