<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/header"
        layout="@layout/view_back"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/bottomSectionWrapper">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layoutDetailWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@color/red"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_m"
                        android:layout_marginBottom="@dimen/margin_m">
                        <ImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="42dp"
                            android:layout_height="31dp"
                            android:text="@string/idtransaksi"
                            android:textColor="@color/white"
                            android:fontFamily="@font/ubuntu_r"
                            android:textSize="@dimen/font_normal"
                            android:layout_marginStart="@dimen/margin_big"/>
                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="PT. Asuransi ACA Indonesia"
                            android:textColor="@color/grey_medium"
                            android:textSize="12sp"
                            android:lineHeight="13sp"
                            android:layout_toEndOf="@id/imgAvatar"
                            android:fontFamily="@font/ubuntu_r"
                            android:layout_marginEnd="@dimen/margin_big"/>
                        <TextView
                            android:id="@+id/tvProductName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:text="ACA Travel Safe"
                            android:textColor="@color/black_7777"
                            android:textSize="12sp"
                            android:layout_below="@+id/tvName"
                            android:layout_toEndOf="@id/imgAvatar"
                            android:fontFamily="@font/ubuntu_r"
                            android:layout_marginEnd="@dimen/margin_big"/>
                        <View
                            android:id="@+id/transaksi_line"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey_bg_border"
                            android:layout_below="@+id/tvProductName"
                            android:layout_marginTop="@dimen/margin_medium"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/transaksi_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/transaksi_line"
                            android:background="@color/white"
                            android:orientation="vertical">
                            <View
                                android:id="@+id/vertical_line"
                                android:layout_width="1dp"
                                android:layout_height="0dp"
                                android:background="@color/grey_bg_border"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>

                            <TextView
                                android:id="@+id/tvProtectionLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="6dp"
                                android:fontFamily="@font/ubuntu_r"
                                android:text="PT. Asuransi ACA"
                                android:textColor="@color/grey_medium"
                                android:textSize="12sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tvProductPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/ubuntu_r"
                                android:text="Rp. 200.000"
                                android:textColor="#777777"
                                android:textSize="15sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tvProtectionLabel" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.5" />
                            <TextView
                                android:id="@+id/tvBiayaPremi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/ubuntu_r"
                                android:text="Harga"
                                android:textColor="@color/grey_medium"
                                android:textSize="12sp"
                                android:layout_marginStart="16dp"
                                app:layout_constraintStart_toStartOf="@id/guideline3"
                                app:layout_constraintTop_toTopOf="parent"/>
                            <TextView
                                android:id="@+id/tvBiayaPremiPriceNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp.100.000"
                                android:visibility="gone"
                                android:textSize="15sp"
                                android:fontFamily="@font/ubuntu_r"
                                android:textColor="@color/black_7f7f7f"
                                android:textStyle="bold"
                                android:background="@drawable/strikethrough"
                                android:layout_marginStart="16dp"
                                android:layout_marginBottom="16dp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintStart_toStartOf="@id/guideline3"
                                app:layout_constraintTop_toBottomOf="@id/tvBiayaPremi"/>
                            <TextView
                                android:id="@+id/tvBiayaPremiPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BCA Transfer"
                                android:textSize="13sp"
                                android:fontFamily="@font/ubuntu_r"
                                android:textColor="@color/grey_medium"
                                android:textStyle="bold"
                                android:layout_marginStart="16dp"
                                android:layout_marginBottom="16dp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintStart_toStartOf="@id/guideline3"
                                app:layout_constraintTop_toBottomOf="@id/tvBiayaPremiPriceNormal"/>
                            <View
                                android:id="@+id/separator2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_bg_border"
                                android:layout_marginTop="16dp"
                                app:layout_constraintTop_toBottomOf="@id/tvBiayaPremiPrice"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:id="@+id/benefit"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/transaksi_linear"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="8dp">
                                <TextView
                                    android:id="@+id/tvBenefit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kenapa harus produk ini?"
                                    android:textSize="12sp"
                                    android:textColor="#a7a7a7"
                                    android:fontFamily="@font/ubuntu_r"/>

                                <TextView
                                    android:id="@+id/tvBenefitValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp. 200.000"
                                    android:textSize="12sp"
                                    android:lineHeight="10sp"
                                    android:letterSpacing="0.1"
                                    android:fontFamily="@font/ubuntu_r"
                                    android:textColor="#777777"
                                    android:layout_marginTop="8dp"/>
                            </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/expandableRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutDetailWrapper"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/bottomSectionWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tvHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:text="Harga"
            android:textSize="12sp"
            android:fontFamily="@font/ubuntu_m"
            />

        <TextView
            android:id="@+id/tvHargaValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHarga"
            android:layout_marginStart="16dp"
            android:text="Rp.90000"
            android:fontFamily="@font/ubuntu_r"
            android:textColor="@color/green"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_beli"
            android:layout_width="114dp"
            android:layout_height="44dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:text="Beli"
            android:background="@drawable/border_red"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu_r"
            android:textAllCaps="false"
            android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/loader_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:visibility="gone"
        android:background="@color/white">
        <com.agrawalsuneet.dotsloader.loaders.AllianceLoader
            android:id="@+id/loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:alliance_animDuration="500"
            app:alliance_distanceMultiplier="5"
            app:alliance_dotsRadius="4dp"
            app:alliance_drawOnlyStroke="true"
            app:alliance_firstDotsColor="@color/colorPrimary"
            app:alliance_secondDotsColor="@color/colorPrimary"
            app:alliance_strokeWidth="8dp"
            app:alliance_thirdDotsColor="@color/colorPrimary" />
    </RelativeLayout>
</RelativeLayout>