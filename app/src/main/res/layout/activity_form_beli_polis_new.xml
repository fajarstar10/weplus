<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".belipolis.FormBeliPolisNew">
    <include
        android:id="@+id/layoutHeader"
        layout="@layout/view_back" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutHeader"
        android:layout_marginBottom="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvInsuranceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:text="Asuransi yang diajukan"
                android:textSize="16sp"
                android:fontFamily="@font/ubuntu_m"
                tools:ignore="HardcodedText" />
            <RelativeLayout
                android:id="@+id/productWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/border_grey_rounded"
                android:layout_below="@id/tvInsuranceLabel"
                android:padding="8dp">
                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_bca"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/tvInsuranceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/imgProduct"
                    android:fontFamily="@font/ubuntu_m"
                    tools:text="ACA Personal Accident" />

                <TextView
                    android:id="@+id/tvInsuranceDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imgProduct"
                    android:layout_below="@id/tvInsuranceTitle"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    tools:text="24 June 2020 - 25 July 2020"
                    android:fontFamily="@font/ubuntu_m"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tvInsuranceType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imgProduct"
                    android:layout_below="@id/tvInsuranceDate"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    tools:text="Personal Accident"
                    android:fontFamily="@font/ubuntu_m"
                    android:textSize="12sp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvOrderedByNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_below="@id/productWrapper"
                android:text="Data Pemesan"
                android:fontFamily="@font/ubuntu_m"
                />
            <RelativeLayout
                android:id="@+id/orderedByLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/border_grey"
                android:layout_marginHorizontal="16dp"
                android:layout_below="@id/tvOrderedByNameLabel">
                <ImageView
                    android:id="@+id/imgEditOrderedName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/ic_baseline_edit_24px"/>
                <TextView
                    android:id="@+id/tvOrderedByName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    tools:text="Fifi Henirawati"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/ubuntu_b"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tvEmailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvOrderedByName"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:text="Email"
                    android:fontFamily="@font/ubuntu_r"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvEmailLabel"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:text="fifi@weplus.id"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/ubuntu_r"
                    android:textSize="12sp"
                    />
                <RelativeLayout
                    android:id="@+id/informationWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvEmail"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp"
                    android:background="@color/red_burem">
                    <ImageView
                        android:id="@+id/imgInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:tint="@color/white"
                        app:srcCompat="@drawable/ic_baseline_info_24"/>
                    <TextView
                        android:id="@+id/tvInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/imgInfo"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/white"
                        android:text="Pastikan data anda sudah benar \nDetail transaksi akan dikirimkan ke data pemesan/pemegang polis"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/polisHolderFormWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@id/orderedByLayout">
                <TextView
                    android:id="@+id/tvPolisHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:visibility="visible"

                    android:text="Data Pemegang Polis"
                    android:fontFamily="@font/ubuntu_m"
                    />
                <TextView
                    android:id="@+id/tvSameWithOrderNamePolis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:layout_below="@id/tvPolisHolder"
                    android:text="Sama dengan data pemesan"
                    android:fontFamily="@font/ubuntu_m"
                    android:textSize="12sp"
                    />
                <Switch
                    android:id="@+id/toggleButtonPolis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:layout_below="@id/tvPolisHolder"
                    android:layout_alignParentEnd="true"/>
                <RelativeLayout
                    android:id="@+id/polisHolderWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toggleButtonPolis"
                    android:background="@drawable/border_grey"
                    android:padding="8dp"
                    android:visibility="visible"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp">
                    <ImageView
                        android:id="@+id/imgEditPolisHolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        app:srcCompat="@drawable/ic_baseline_edit_24px"/>
                    <TextView
                        android:id="@+id/tvPolisHolderHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Masukkan Data Pemegang polis"
                        android:textColor="@color/grey_medium"/>
                    <TextView
                        android:id="@+id/tvPolisHolderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        tools:text="Fifi Henirawati"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:fontFamily="@font/ubuntu_b"
                        android:textSize="12sp"/>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/tvDataTertanggung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/polisHolderFormWrapper"
                android:text="Data Tertanggung"
                android:fontFamily="@font/ubuntu_m"
                />
            <TextView
                android:id="@+id/tvSameWithOrderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/tvDataTertanggung"
                android:text="Sama dengan data pemesan"
                android:fontFamily="@font/ubuntu_m"
                android:textSize="12sp"
                />
            <Switch
                android:id="@+id/toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tvDataTertanggung"
                android:layout_alignParentEnd="true"/>
            <RelativeLayout
                android:id="@+id/DataTertanggungWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSameWithOrderName"
                android:background="@drawable/border_grey"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp">
                <ImageView
                    android:id="@+id/imgEditDataTertanggung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/ic_baseline_edit_24px"/>
                <TextView
                    android:id="@+id/tvDataTertanggungHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Masukkan Data Tertanggung"
                    android:textColor="@color/grey_medium"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/tvDataTertanggungName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    tools:text="Fifi Henirawati"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:fontFamily="@font/ubuntu_b"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tvDataTertanggungID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDataTertanggungName"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:layout_marginStart="16dp"
                    android:text="Email"
                    android:fontFamily="@font/ubuntu_r"
                    android:textSize="12sp"
                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/tvAhliWaris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/DataTertanggungWrapper"
                android:text="Data Ahli Waris"
                android:fontFamily="@font/ubuntu_m"
                />
            <RelativeLayout
                android:id="@+id/AhliWarisWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAhliWaris"
                android:background="@drawable/border_grey"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp">
                <ImageView
                    android:id="@+id/imgEditAhliWaris"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/ic_baseline_edit_24px"/>
                <TextView
                    android:id="@+id/tvAhliWarisHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Masukkan Data Ahli Waris"
                    android:textColor="@color/grey_medium"/>
                <TextView
                    android:id="@+id/tvAhliWarisName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    tools:text="Fifi Henirawati"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:fontFamily="@font/ubuntu_b"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tvAhliWarisInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvAhliWarisName"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:layout_marginStart="16dp"
                    android:text="Email"
                    android:fontFamily="@font/ubuntu_r"
                    android:textSize="12sp"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tvDataProperty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/AhliWarisWrapper"
                android:text="Data Property"
                android:visibility="gone"
                android:fontFamily="@font/ubuntu_m"
                />
            <RelativeLayout
                android:id="@+id/dataPropertyWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDataProperty"
                android:background="@drawable/border_grey"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp">
                <ImageView
                    android:id="@+id/imgEditDataProperty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/ic_baseline_edit_24px"/>
                <TextView
                    android:id="@+id/tvDataPropertyHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Masukkan Data Property"
                    android:textColor="@color/grey_medium"/>
                <TextView
                    android:id="@+id/tvDataPropertyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    tools:text="Fifi Henirawati"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:fontFamily="@font/ubuntu_b"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tvDataPropertyInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDataPropertyName"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:layout_marginStart="16dp"
                    android:text="Email"
                    android:fontFamily="@font/ubuntu_r"
                    android:textSize="12sp"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tvDataMotor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/dataPropertyWrapper"
                android:text="Data Motor"
                android:visibility="gone"
                android:fontFamily="@font/ubuntu_m"
                />
            <RelativeLayout
                android:id="@+id/dataMotorWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDataMotor"
                android:background="@drawable/border_grey"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp">
                <ImageView
                    android:id="@+id/imgEditDataMotor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/ic_baseline_edit_24px"/>
                <TextView
                    android:id="@+id/tvDataMotorHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Masukkan Data Motor"
                    android:textColor="@color/grey_medium"/>
                <TextView
                    android:id="@+id/tvDataMotorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    tools:text="Fifi Henirawati"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:fontFamily="@font/ubuntu_b"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tvDataMotorInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDataMotorName"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:layout_marginStart="16dp"
                    android:text="Email"
                    android:fontFamily="@font/ubuntu_r"
                    android:textSize="12sp"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tvStartDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:layout_below="@id/dataMotorWrapper"
                android:text="Tanggal dan Jam Pengaktifan Polis"
                android:fontFamily="@font/ubuntu_m"
                />
            <RelativeLayout
                android:id="@+id/startDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/border_grey"
                android:layout_marginHorizontal="16dp"
                android:layout_below="@id/tvStartDateTitle"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:hint="Pilih Tanggal dan Jam"
                    android:textColorHint="@color/grey_medium"
                    android:textColor="@color/black_7070"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/ubuntu_b"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:id="@+id/startDateInformationWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvStartDate"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp"
                    android:background="@color/red_burem">
                    <ImageView
                        android:id="@+id/imgStartDateInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:tint="@color/white"
                        app:srcCompat="@drawable/ic_baseline_info_24"/>
                    <TextView
                        android:id="@+id/tvStartDateInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/imgStartDateInfo"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/white"
                        android:text="Pilih akan diaktifkan sesuai dengan tanggal dan jam yang dipilih"/>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/tvDataMobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/startDateLayout"
                android:text="Data Mobil"
                android:visibility="gone"
                android:fontFamily="@font/ubuntu_m"
                />
            <RelativeLayout
                android:id="@+id/dataMobilWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDataMobil"
                android:background="@drawable/border_grey"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp">
                <ImageView
                    android:id="@+id/imgEditDataMobil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:srcCompat="@drawable/ic_baseline_edit_24px"/>
                <TextView
                    android:id="@+id/tvDataMobilHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Masukkan Data Mobil"
                    android:textColor="@color/grey_medium"/>
                <TextView
                    android:id="@+id/tvDataMobilName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    tools:text="Fifi Henirawati"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:fontFamily="@font/ubuntu_b"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tvDataMobilInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDataMobilName"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:layout_marginStart="16dp"
                    android:text="Email"
                    android:fontFamily="@font/ubuntu_r"
                    android:textSize="12sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tcWrapper"
                android:background="@drawable/border_grey_rounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_below="@+id/dataMobilWrapper"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp">
                <CheckBox
                    android:id="@+id/checkTC"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tncText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/checkTC"
                    android:layout_marginStart="8dp"
                    android:text="Dengan ini saya sudah menyetujui syarat dan ketentuan yang berlaku"/>
            </RelativeLayout>
            <Button
                android:id="@+id/btnPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_below="@id/tcWrapper"
                android:background="@drawable/border_fill_red"
                android:text="Lakukan Pembayaran"
                android:textAllCaps="false"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>