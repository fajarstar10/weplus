<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    android:paddingHorizontal="16dp"
    android:background="@color/white"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/data_pemegang_polis_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_b"
        android:text="1."
        android:textColor="@color/black_7777"
        android:textSize="@dimen/font_normal" />

    <TextView
        android:id="@+id/data_pemegang_polis_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/data_pemegang_polis_no"
        android:fontFamily="@font/ubuntu_m"
        android:maxLines="1"
        android:text="Henry Chrystianto"
        android:textColor="@color/grey_medium"
        android:textSize="@dimen/font_normal" />

    <TextView
        android:id="@+id/data_pemegang_polis_btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/ubuntu_b"
        android:text="EDIT"
        android:textColor="@color/red"
        android:textSize="@dimen/font_normal" />

</RelativeLayout>