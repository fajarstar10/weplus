<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".affiliasi.AffiliasiBengkelDetail">
    <include
        android:id="@+id/top"
        layout="@layout/view_back"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/bengkelIllus"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/top"
        android:src="@drawable/illus_bengkel"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tvBengkelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bengkelIllus"
        android:layout_margin="16dp"
        android:fontFamily="@font/ubuntu_b"
        android:textSize="18sp"
        tools:text="AUTO 2000"/>
    <RelativeLayout
        android:id="@+id/informationWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvBengkelName"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
    <ImageView
        android:id="@+id/locIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_baseline_location_on_24px"/>
        <TextView
            android:id="@+id/tvBengkelAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/locIcon"
            tools:text="Jala sehat no 88 RT 08 RW 03"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey_bg_border"
        android:orientation="vertical"
        android:layout_below="@id/informationWrapper"/>
    <ImageView
        android:id="@+id/callIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/divider1"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_phone_call"/>
    <TextView
        android:id="@+id/tvHubungi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hubungi"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ubuntu_m"
        android:layout_below="@id/callIcon"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black_7f7f7f"/>
    <LinearLayout
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey_bg_border"
        android:orientation="vertical"
        android:layout_below="@id/tvHubungi"/>
</RelativeLayout>