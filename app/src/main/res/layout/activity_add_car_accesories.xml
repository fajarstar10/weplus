<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey"
    android:paddingBottom="16dp">

    <include
        android:id="@+id/tambahan_top"
        layout="@layout/view_back"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tambahan_top">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvActTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Checklist aksesoris yang ingin ditambahan"
                android:textStyle="bold"
                android:textColor="@color/grey_medium"
                android:textSize="14sp"/>

            <CheckBox
                android:id="@+id/checkboxSelectAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvActTitle"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/tvCheckAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvActTitle"
                android:layout_toEndOf="@id/checkboxSelectAll"
                android:text="Pilih semua (optional)"
                android:layout_marginTop="12dp"
                android:textStyle="bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAksesoris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkboxSelectAll"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:id="@+id/tvLabelNominal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rvAksesoris"
                android:text="Nominal aksesoris dalam mobil(kelipatan 1000)"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvRp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tvLabelNominal"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/tvRpValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000000"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tvLabelNominal"
                android:layout_toEndOf="@id/tvRp"/>

            <ImageView
                android:id="@+id/imgStorage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvRp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:tint="@color/black_7f7f7f"
                app:srcCompat="@drawable/ic_storage_black_24dp"/>
            <com.xw.repo.BubbleSeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvRp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/imgStorage"
                android:layout_alignParentEnd="true"
                app:bsb_bubble_color="@color/colorPrimary"
                app:bsb_bubble_text_color="@color/colorPrimaryDark"
                app:bsb_max="30"
                app:bsb_min="1"
                app:bsb_second_track_color="@color/red"
                app:bsb_section_text_position="bottom_sides"
                app:bsb_show_progress_in_float="false"
                app:bsb_show_thumb_text="true"
                app:bsb_track_color="@color/black_7f7f7f"/>
            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:textColor="@color/white"
                android:background="@color/red"
                android:layout_below="@id/seekBar"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>