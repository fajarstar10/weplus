                        android:layout_below="@id/tvAirlineTransitThree"/>
                    <TextView
                        android:id="@+id/tvArrivalTimeTransitThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="15:15 CEST"
                        android:layout_below="@id/tvAirlineTransitThree"
