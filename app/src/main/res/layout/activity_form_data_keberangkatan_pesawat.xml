                    <TextView
                        android:id="@+id/tvFlightNoTransitThree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="GA-411"/>
                    <TextView
                        android:id="@+id/tvAirlineTransitThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Garuda Indonesia"
                        android:textStyle="bold"
                        android:layout_below="@id/tvFlightNoTransitThree"/>
                    <TextView
                        android:id="@+id/tvDepartureTimeTransitThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
