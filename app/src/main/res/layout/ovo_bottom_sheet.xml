<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4C3494"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgOvo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/ic_logo_ovo_purple"
        app:tint="#FFF" />
    <TextView
        android:id="@+id/tvOvoNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan nomor akun ovo anda"
        android:fontFamily="@font/ubuntu_m"
        android:layout_below="@id/imgOvo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textColor="#fff"
        tools:ignore="HardcodedText" />
    <LinearLayout
        android:id="@+id/inputWrapper"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal"
        android:layout_below="@id/tvOvoNumber">
        <TextView
            android:id="@+id/tvIdCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+62"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/ubuntu_m"
            android:background="@drawable/border_grey_square"
            />
        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/tvIdCode"
            android:padding="12dp"
            android:inputType="phone"
            android:background="#fff"
            android:maxLength="16"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_below="@id/inputWrapper"
        android:background="#FCFCFE">
        <Button
            android:id="@+id/buttonCancel"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Batal"
            android:background="@drawable/border_fill_frey_medium"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu_m"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/buttonSelect"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="Lanjutkan"
        android:background="@drawable/border_fill_red"
        android:textColor="@color/white"
        android:fontFamily="@font/ubuntu_m"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />
        <LinearLayout
            android:id="@+id/dummyView"
            android:layout_width="wrap_content"
            android:layout_height="360dp"
            android:visibility="gone"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>