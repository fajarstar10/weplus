<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg_viewpager"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/perjalanan_top"
        layout="@layout/view_back"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/perjalanan_top"
        app:layout_constraintBottom_toTopOf="@id/btnNext">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgBannerLife"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_bike_polis"/>
            <RelativeLayout
                android:id="@+id/dobWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@id/imgBannerLife">
                <ImageView
                    android:id="@+id/imgCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:tint="@color/black_7070"
                    app:srcCompat="@drawable/ic_calendar_24px"/>

                <TextView
                    android:id="@+id/tvDobLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imgCalendar"
                    android:text="Tanggal Lahir"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/grey_medium"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/etDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imgCalendar"
                    android:layout_below="@id/tvDobLabel"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"
                    android:hint="Masukkan tanggal lahir"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:textColor="@color/black_7f7f7f"
                    android:textColorHint="@color/grey_medium"
                    android:textStyle="bold"/>
                <View
                    android:id="@+id/dobLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toEndOf="@id/imgCalendar"
                    android:background="@color/grey_medium"
                    android:layout_below="@id/etDob"
                    android:layout_marginStart="16dp"/>
                <TextView
                    android:id="@+id/errorTextDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dobLine"
                    android:layout_toEndOf="@id/imgCalendar"
                    android:text="Silahkan isi data"
                    android:layout_marginStart="16dp"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:textColor="@color/red_burem"
                    android:textColorHint="@color/grey_medium" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/genderWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@id/dobWrapper">
                <ImageView
                    android:id="@+id/imgGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:tint="@color/black_7070"
                    app:srcCompat="@drawable/ic_male"/>

                <TextView
                    android:id="@+id/tvGenderLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imgGender"
                    android:text="Jenis Kelamin"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/grey_medium"
                    android:textSize="14sp" />
                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_toEndOf="@id/imgGender"
                    android:layout_below="@id/tvGenderLabel"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"
                    android:textSize="14sp"
                    android:enabled="false"
                    android:entries="@array/gender"
                    android:textColor="@color/black_7f7f7f"
                    android:textColorHint="@color/grey_medium"
                    android:textStyle="bold"/>
                <View
                    android:id="@+id/genderLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toEndOf="@id/imgGender"
                    android:background="@color/grey_medium"
                    android:layout_below="@id/spinnerGender"
                    android:layout_marginStart="16dp"/>
                <TextView
                    android:id="@+id/errorTextGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/genderLine"
                    android:layout_toEndOf="@id/imgGender"
                    android:text="Silahkan isi data"
                    android:layout_marginStart="16dp"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:textColor="@color/red_burem"
                    android:textColorHint="@color/grey_medium" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:background="@drawable/border_fill_red"
        android:fontFamily="@font/ubuntu_l"
        android:layout_alignParentBottom="true"
        android:text="@string/lanjutkan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/font_normal"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>