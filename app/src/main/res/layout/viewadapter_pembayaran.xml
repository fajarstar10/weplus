<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/border_rounded_grey_medium"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="@dimen/margin_m"
    android:paddingRight="@dimen/margin_m"
    android:layout_marginBottom="11dp">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/ic_baseline_person_24px" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_m"
        android:layout_toEndOf="@+id/item_image"
        android:text=""
        android:textColor="@color/black_7777"
        android:textSize="@dimen/font_normal"
        android:fontFamily="@font/ubuntu_b" />

<!--    </RelativeLayout>-->

</RelativeLayout>
