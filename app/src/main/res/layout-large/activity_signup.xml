<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/view_back"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_big_m"
        android:layout_marginRight="@dimen/margin_big_m"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@color/white"
        android:fontFamily="@font/ubuntu_r"
        android:paddingTop="@dimen/margin_m"
        android:text="@string/namalengkap"
        android:textSize="@dimen/font_normal" />

    <EditText
        android:id="@+id/signup_nama_lengkap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="@dimen/margin_big_m"
        android:layout_marginRight="@dimen/margin_big_m"
        android:fontFamily="@font/ubuntu_r"
        android:background="@drawable/border_grey"
        android:hint="John"
        android:inputType="text"
        android:paddingLeft="@dimen/margin_17"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/grey_medium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_big_m"
        android:layout_marginRight="@dimen/margin_big_m"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@color/white"
        android:paddingTop="@dimen/margin"
        android:fontFamily="@font/ubuntu_r"
        android:text="@string/alamatemail"
        android:textSize="@dimen/font_normal" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="@dimen/margin_big_m"
        android:layout_marginRight="@dimen/margin_big_m"
        android:background="@drawable/border_grey"
        android:hint="John@gmail.com"
        android:fontFamily="@font/ubuntu_r"
        android:textSize="@dimen/font_normal"
        android:inputType="textEmailAddress"
        android:paddingLeft="@dimen/margin_17"
        android:textColor="@color/grey_medium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_big_m"
        android:layout_marginRight="@dimen/margin_big_m"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin_small"
        android:fontFamily="@font/ubuntu_r"
        android:text="@string/katasandi"
        android:textSize="@dimen/font_normal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_big_m"
        android:layout_marginRight="@dimen/margin_big_m">

        <EditText
            android:id="@+id/signup_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:background="@drawable/border_grey"
            android:fontFamily="@font/ubuntu_r"
            android:hint="******"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/margin_17"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/grey_medium" />

        <ImageView
            android:id="@+id/signup_password_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_17"
            android:src="@drawable/ic_baseline_visibility_off_24px" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_big_m"
        android:layout_marginRight="@dimen/margin_big_m"
        android:layout_marginBottom="@dimen/margin_small"
        android:fontFamily="@font/ubuntu_r"
        android:paddingTop="@dimen/margin"
        android:background="@color/white"
        android:text="@string/nomortelepon"
        android:textSize="@dimen/font_normal" />

    <EditText
        android:id="@+id/signup_nomor_telepon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="@dimen/margin_big_m"
        android:layout_marginRight="@dimen/margin_big_m"
        android:background="@drawable/border_grey"
        android:hint="085612347890"
        android:fontFamily="@font/ubuntu_r"
        android:inputType="phone"
        android:paddingLeft="@dimen/margin_17"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/grey_medium" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_big_m"
        android:layout_marginRight="@dimen/margin_big_m"
        android:paddingTop="@dimen/margin_medium"
        android:background="@color/white"
        android:fontFamily="@font/ubuntu_r"
        android:text="@string/denganmelakukanregistrasi"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/font_midle" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_big_m"
        android:layout_marginRight="@dimen/margin_big_m"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/signup_menyetujui_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin"
            android:text="menyetujui"
            android:fontFamily="@font/ubuntu_r"
            android:textSize="@dimen/font_midle"
            android:layout_marginRight="@dimen/margin"/>

    <TextView
        android:id="@+id/signup_syarat_ketentuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:text="@string/syaratdanketentuan"
        android:fontFamily="@font/ubuntu_b"
        android:textSize="@dimen/font_midle"
        android:layout_toRightOf="@id/signup_menyetujui_lbl"/>
        <TextView
            android:id="@+id/signup_dari_we_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:background="@color/white"
            android:textStyle="normal"
            android:gravity="center_horizontal"
            android:fontFamily="@font/ubuntu_r"
            android:text="@string/dariweplus"
            android:textSize="@dimen/font_midle"
            android:layout_toRightOf="@id/signup_syarat_ketentuan"/>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup_btn_daftar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_above="@id/atau"
        android:layout_marginLeft="@dimen/margin_big_m"
        android:layout_marginRight="@dimen/margin_big_m"
        android:layout_marginTop="@dimen/margin_29"
        android:layout_marginBottom="@dimen/margin"
        android:background="@drawable/border_red"
        android:gravity="center_horizontal|center_vertical"
        android:fontFamily="@font/ubuntu_b"
        android:text="@string/daftar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/font_normal" />

    <LinearLayout

        android:id="@+id/logindengan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_m"
        android:layout_marginTop="@dimen/margin_m"
        android:orientation="horizontal"
        android:weightSum="5"
        android:visibility="gone">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:background="@color/grey_medium" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="@string/ataulogindengan"
            android:textColor="@color/red"
            android:textSize="@dimen/font_small"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:background="@color/grey_medium" />

    </LinearLayout>

</LinearLayout>